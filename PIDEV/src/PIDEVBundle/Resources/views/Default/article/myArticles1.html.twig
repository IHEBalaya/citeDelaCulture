{% extends 'baseBack.html.twig' %}

{% block body %}
<div class="col-md-12 mt">
    <div class="content-panel">
        <table class="table table-hover">
            <h4><i class="fa fa-angle-right"></i> Articles publiés</h4>

            <hr>
            <thead>
            <tr>
                <th>Titre</th>
                <th>Type</th>
                <th>Description</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>

    {% for article in articlesP %}
            <tr>
                <td>{{ article.titreArticle }}</td>
                <td>{{ article.typeArticle }}</td>
                <td>{{ article.descriptionArticle }}</td>
                <td>{{ article.datePublication | date("d/m/Y") }}</td>
                <td><a href="{{ path('article_delete', { 'idArticle': article.idArticle }) }}">Supprimer</a> ou <a href="{{ path('article_edit', { 'idArticle': article.idArticle }) }}">Modifier</a> </td>

            </tr>
    {% endfor %}
            </tbody></table></div></div>
<br>
    <div class="col-md-12 mt">
        <div class="content-panel">
            <table class="table table-hover">
                <h4><i class="fa fa-angle-right"></i> Articles non publiés</h4>
                <hr>
                <thead>
                <tr>
                    <th>Titre</th>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Action</th>
                    <th>Publier</th>
                </tr>
                </thead>
                <tbody>
    {% for article in articlesB %}
        <tr>
            <td>{{ article.titreArticle }}</td>
            <td>{{ article.typeArticle }}</td>
            <td>{{ article.descriptionArticle }}</td>
            <td>{{ article.datePublication | date("d/m/Y") }}</td>
            <td><a href="{{ path('article_delete', { 'idArticle': article.idArticle }) }}">Supprimer</a> ou <a href="{{ path('article_edit', { 'idArticle': article.idArticle }) }}">Modifier</a> </td>
            <td><a href="{{ path('article_publish', { 'idArticle': article.idArticle }) }}">Publier</a> </td>

        </tr>
    {% endfor %}
    </tbody></table></div></div>
{% endblock %}
